<h1>Detail</h1>
<p>Title：<%= @blog.title %></p>
<p>Content：<%= @blog.content %></p>
<p><%= image_tag @blog.image.url if @blog.image.present? %></p>


<% unless @blog.user_id == current_user.id %>
  <% if @favorite.present? %>
    <p><%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %></p>
  <% else %>
    <p><%= link_to 'お気に入りする', favorites_path(blog_id: @blog.id), method: :post, class: 'btn btn-primary' %></p>
  <% end %>
<% end %>



<%= link_to 'Back', list_blogs_path %>
