<section class="main-header">
  <h1>Blog List</h1>
</section>

<p><%= notice %></p>
<table class="table">
  <tr>
    <th>Title</th>
    <th>Content</th>
  </tr>
<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><%= blog.user.name %></td>
    <td><%= link_to 'Detal', blog_path(blog.id) %></td>
  <% if blog.user_id == current_user.id %>
    <td><%= link_to 'Edit', edit_blog_path(blog.id), data: {confirm: 'Are you sure？'} %></td>
    <td><%= link_to 'Delete', blog_path(blog.id), method: :delete,data: { confirm: 'Are you sure？' } %></td>
  <% end %>
  </tr>
<% end %>

</table>
</div>
